<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/class_select.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/class_select.js" />
	</scripts>
	<Panel class="SelectClassRoot">
      <Panel class ="ClassesPanel" id="ClassesPanel">
         <Button id="SniperButton" onactivate="Selected('sniper', 'ClassesPanel')">
            <Image src="file://{images}/test.png" />
         </Button>
         <Button id="CyborgButton" onactivate="Selected('cyborg', 'ClassesPanel')">
            <Label text="Cyborg" />
         </Button>
         <Button id="DemoButton" onactivate="Selected('demo', 'ClassesPanel')">
            <Label text="Demolitions" />
         </Button>
         <Button id="MedicButton" onactivate="Selected('medic', 'ClassesPanel')">
            <Label text="Field Medic" />
         </Button>
         <Button id="MaverickButton" onactivate="Selected('maverick', 'ClassesPanel')">
            <Label text="Maverick" />
         </Button>
         <Button id="HeavyOrdnanceButton" onactivate="Selected('ho', 'ClassesPanel')">
            <Label text="Heavy Ordnance" />
         </Button>
         <Button id="PsychologistButton" onactivate="Selected('psychologist', 'ClassesPanel')">
            <Label text="Psychologist" />
         </Button>
         <Button id="TacticianButton" onactivate="Selected('tactician', 'ClassesPanel')">
            <Label text="Tactician" />
         </Button>
      </Panel>
      <Panel class ="WeaponsPanel" id="WeaponsPanel">
         <Button id="AssaultRifleButton" onactivate="Selected('assault_rifle', 'WeaponsPanel')">
            <Label text="Assault Rifle" />
         </Button>
         <Button id="ChaingunButton" onactivate="Selected('chaingun', 'WeaponsPanel')">
            <Label text="Chaingun" />
         </Button>
         <Button id="VindicatorButton" onactivate="Selected('vindicator', 'WeaponsPanel')">
            <Label text="Vindicator" />
         </Button>
         <Button id="FlamethrowerButton" onactivate="Selected('flamethrower', 'WeaponsPanel')">
            <Label text="Flamethrower" />
         </Button>
         <Button id="RocketButton" onactivate="Selected('rocket', 'WeaponsPanel')">
            <Label text="Rocket Launcher" />
         </Button>
         <Button id="SniperRifleButton" onactivate="Selected('sniper_rifle', 'WeaponsPanel')">
            <Label text="Sniper Rifle" />
         </Button>
      </Panel>
      <Panel class ="ArmorPanel" id="ArmorPanel">
         <Button id="LightArmorButton" onactivate="Selected('light', 'ArmorPanel')">
            <Label text="Light Armor" />
         </Button>
         <Button id="MediumArmorButton" onactivate="Selected('medium', 'ArmorPanel')">
            <Label text="Medium Armor" />
         </Button>
         <Button id="HeavyArmorButton" onactivate="Selected('heavy', 'ArmorPanel')">
            <Label text="Heavy Armor" />
         </Button>
         <Button id="AdvancedArmorButton" onactivate="Selected('advanced', 'ArmorPanel')">
            <Label text="Advanced Armor" />
         </Button>
      </Panel>
      <Panel class="ConfirmResetPanel" id="ConfirmResetPanel">
         <Button id="ConfirmButton" onactivate="Selected('confirm', 'ConfirmResetPanel')">
            <Label text="Confirm Selections" />
         </Button>
         <Button id="ResetButton" onactivate="Selected('reset', 'ConfirmResetPanel')">
            <Label text="Reset Selections" />
         </Button>
      </Panel>
	</Panel>
</root>

