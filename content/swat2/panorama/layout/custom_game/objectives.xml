<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/styles/custom_game/objectives.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/objectives.js" /> 
	</scripts>
	<Panel hittest="false" class="BaseHud">
